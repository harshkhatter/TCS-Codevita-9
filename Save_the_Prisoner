#!/bin/python3

import math
import os
import random
import re
import sys

# Complete the saveThePrisoner function below.
def saveThePrisoner(n, m, s):
    
    # Function with three parameters; no. of prisoner, no. of sweets, special chair
    # check for the special sweet
    if m<n:
        result = s+m-1
        #return the value
        return result
    else:
        #Check for the condition mentioned
        x = m%n
        res = s+x-1
        #return the value
        return res

if __name__ == '__main__':
    fptr = open(os.environ['OUTPUT_PATH'], 'w')

    t = int(input())

    for t_itr in range(t):
        nms = input().split()

        n = int(nms[0])

        m = int(nms[1])

        s = int(nms[2])

        result = saveThePrisoner(n, m, s)

        fptr.write(str(result) + '\n')

    fptr.close()

# https://www.hackerrank.com/challenges/save-the-prisoner/
